<div id="content" class="container">
	<h2>Album: <%= @new_album.title %></h2>

	<h4>Upload photo!</h4>
	<form role="form" action="/photo" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<input type="hidden" name="post[album_id]" value="<%= @new_album.id %>">
			<input type='file' name='post[file_name]'>
		</div>
		<div class="form-group">
			<label for="inputCaption">Caption</label>
			<textarea name="post[caption]" class="form-control" id="inputCaption" placeholder="Enter Caption" row="4"></textarea>
		</div>
		<input type='submit' value='Upload!'>
	</form>
</div>